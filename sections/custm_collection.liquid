<style>
  .right_slide_coll{
    position: absolute;
    top: 40%;
  }
  .custom_collection_bs{
    position: relative;
  }
  @media screen and (max-width:767px){
    .right_collection_slide.collection_custom_slide h1 {
    display: none;
}
   .left_collection_slide.collection_custom_slide h1 {
    display: block !important;
    letter-spacing: 0.06rem;
    font-family: var(--font-body-family);
    font-style: var(--font-body-style);
    font-weight: var(--font-body-weight);
    color: black;
    box-sizing: inherit;
    width: 10%;
    writing-mode: vertical-rl;
    transform: rotate(-180deg);
    font-size: 27px;
    line-height: 30px;
}
    .left_collection_slide.collection_custom_slide .collection_url_left {
    display: flex;
    flex-direction: row;
    font-size: 32px;
    justify-content: space-between;
    align-items: center;
    text-decoration: none;
}
    .custom_collection_bs .collection_container {
    display: flex;
    flex-direction: column;
}
    .left_collection_slide.collection_custom_slide {
    width: 100% !important;
}
    .right_collection_slide.collection_custom_slide {
    width: 100% !important;
}
    .right_slide_coll {
    position: unset;
}
    .left_collection_slide.collection_custom_slide .collection_url_left div {
    width: 100% !important;
    margin: 0;
}
    .left_collection_slide.collection_custom_slide h1 {
    font-size: 27px;
    line-height: 30px;
    text-decoration: none !important;
    font-weight: 100;
}
    .custom_collection_bs {
    margin-bottom: 35px !important;
}
    .right_slide_coll {
    display: flex;
    align-items: center;
}
  }
</style>
<div class="custom_collection_bs">
  <div class="collection_container">
    <div class="left_collection_slide collection_custom_slide">
      <a class="collection_url_left" href="{{ section.settings.collection_url_left }}">
        <div>
          <img src="{{ section.settings.left_collection_image | img_url: 'master' }}">
        </div>
        <h1 style="display:none;">{{ section.settings.right_coll_name1 }}</h1>
      </a>
    </div>
    <div class="right_collection_slide collection_custom_slide">
      <div class="collection_url_left">
        <h1> <a href="{{ section.settings.collection_url_left }}">{{ section.settings.right_coll_name1 }}</a></h1>
        <a href="{{ section.settings.collection_url_right }}" class="right_slide_coll">
          <img src="{{ section.settings.right_collection_image | img_url: 'master' }}">
          <p>{{ section.settings.right_coll_name2 }}</p>
        </a>
      </div>
    </div>
  </div>
</div>
