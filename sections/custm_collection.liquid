      "label": "right_collection_image"
    },
        {
      "type": "text",
      "id": "right_coll_name1",
      "label": "right_coll_name1"
    },
        {
      "type": "text",
      "id": "right_coll_name2",
      "label": "right_coll_name2"
    },
            {
      "type": "url",
      "id": "collection_url_left",
      "label": "collection_url_right"
    },
            {
      "type": "url",
      "id": "collection_url_right",
      "label": "collection_url_right"
    }
  ],

  "presets": [
    {
      "name": "custom_collection"
    }
  ]
}
