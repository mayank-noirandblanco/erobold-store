{%- style -%}
.erobold-shootss-section {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: stretch;
    align-content: stretch;
}
.erobold-shootss-section .erobold-shoots-item.erobold-shoots-video {
    width: 30%;
}
  .erobold-shootss-section .erobold-shoots-item.erobold-shoots-image {
    width: 70%;
}
  .erobold-shootss-section .erobold-shoots-item.erobold-shoots-image img {
    width: 100%;
    height: 100%;
}
  .erobold-shootss-section .erobold-shoots-item video {
    width: 100%;
    height: 100%;
}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }
.erobold-shootss-section .erobold-shoots-item.erobold-shoots-image {
    width: 70%;
    padding: 4.5px 0;
    position: relative;
    will-change: transform;
}
  .bls__lookbook-dot.absolute {
    position: absolute;
    z-index: 2;
}
  .bls__lookbook-dot.absolute>span {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    position: relative;
    cursor: pointer;
    transition: all ease .3s;
    background-color: rgb(0 0 0 / 50%);
    fill: #fff;
    font-family: var(--base-font-family)!important;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
.shoots-product {
    display: none;
    position: absolute;
    min-width: 150px;
    background: white;
  box-shadow: 0px 10px 20px 0px rgba(0, 0, 0, 0.1);
    top: 33px;
    left: 0;
}
  .bls__lookbook-dot.absolute:hover .shoots-product {
    display: block;
}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media screen and (max-width: 750px) {
    .erobold-shootss-section {
    display: flex;
    flex-direction: column;
}
   .erobold-shootss-section .erobold-shoots-item.erobold-shoots-video {
    width: 100%;
}
    .erobold-shootss-section .erobold-shoots-item.erobold-shoots-image {
    width: 100%;
}
  }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    
<div class="erobold-shootss-section">
   {%- if section.settings.video != blank -%}
  <div class="erobold-shoots-item erobold-shoots-video">     
  {{ section.settings.video
            | video_tag:
              image_size: "1100x",
              loop: section.settings.enable_video_looping,
              controls: false,
              muted: true,
              autoplay: true
          }}
  </div>
      {%- endif -%}
      {%- if section.settings.image != blank -%}
  <div class="erobold-shoots-item erobold-shoots-image">   
     {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
 {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
        {%- for block in section.blocks -%}
          {% liquid
            assign position_top = block.settings.position_top
            assign position_left = block.settings.position_left
            assign product = block.settings.product
          %}
          <div
            class="bls__lookbook-dot {% if forloop.index == 1 %}active{% endif %} absolute"
            style="top: {{ position_top }}%; left: {{ position_left }}%;transform: translate(-{{ position_left }}%,-{{ position_top }}%)"
            data-product-position="{{ forloop.index }}"
          >
              <span class="icon-dot icon">
                <svg width="10" height="10" viewBox="0 0 10 10" fill="" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M5 0C4.44772 0 4 0.447715 4 1V4L1 4C0.447715 4 0 4.44771 0 5C0 5.55228 0.447715 6 1 6H4V9C4 9.55229 4.44772 10 5 10C5.55228 10 6 9.55228 6 9V6H9C9.55228 6 10 5.55229 10 5C10 4.44772 9.55228 4 9 4L6 4V1C6 0.447715 5.55228 0 5 0Z" fill=""></path>
                </svg>
              </span>
          {% if product != blank %}
            <div class="shoots-product">
              {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
            </div>
            {% endif %}
          </div>
        {%- endfor -%}
        
  </div>
  {%- else -%}
        <div class="erobold-shoots-item">   
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
         </div>
      {%- endif -%}
</div>
    
  </div>
</div>

{% schema %}
{
    "name": "Erobold Shoots",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.video.settings.video.label"
    },
    {
          "type": "checkbox",
          "id": "enable_video_looping",
          "label": "t:sections.video.settings.enable_video_looping.label",
          "default": true
        },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "limit": 5,
      "settings": [
        {
          "type": "range",
          "id": "position_top",
          "label": "Offset top",
          "min": 0,
          "max": 100,
          "unit": "%",
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "position_left",
          "label": "Offset left",
          "min": 0,
          "max": 100,
          "unit": "%",
          "step": 1,
          "default": 50
        },
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Erobold Shoots"
    }
  ]
}
{% endschema %}
